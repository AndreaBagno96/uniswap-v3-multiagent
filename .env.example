# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# OpenAI API (Required for all services)
OPENAI_API_KEY=your_openai_api_key_here

# The Graph API (Required for pool risk analysis)
THE_GRAPH_API_KEY=your_thegraph_api_key_here

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================

# Tavily API (Optional - for token sentiment analysis)
TAVILY_API_KEY=your_tavily_api_key_here

# LangSmith / LangChain (Optional - for observability/tracing)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=uniswap-risk-microservices

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# SERVICE PORTS (for local development)
# ============================================================================

BACKEND_PORT=5000
POOL_RISK_PORT=8001
TOKEN_INTEL_PORT=8002
POOL_RISK_MCP_PORT=8002
TOKEN_INTEL_MCP_PORT=8003

# ============================================================================
# SERVICE URLs (for Docker - use service names)
# ============================================================================

POOL_RISK_SERVICE_URL=http://pool-risk:80
TOKEN_INTEL_SERVICE_URL=http://token-intel:80
POOL_RISK_MCP_URL=http://pool-risk-mcp:8002
TOKEN_INTEL_MCP_URL=http://token-intel-mcp:8003

# For local development (use localhost)
# POOL_RISK_SERVICE_URL=http://localhost:8001
# TOKEN_INTEL_SERVICE_URL=http://localhost:8002
# POOL_RISK_MCP_URL=http://localhost:8002
# TOKEN_INTEL_MCP_URL=http://localhost:8003

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

CORS_ORIGINS=*
LOG_LEVEL=INFO
ENVIRONMENT=development
